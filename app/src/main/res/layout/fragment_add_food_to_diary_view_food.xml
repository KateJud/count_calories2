<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">


        <!-- HeadLine -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <TextView
            android:id="@+id/textViewFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_weight="1"
            style="@style/Widget.TextViewBig"
            />

        <!-- Image -->
        <ImageView
            android:id="@+id/imageViewFoodImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"

            />
        <!-- //Image -->
        </TableRow>
        <!-- //HeadLine -->

<!--        <TextView-->
<!--            android:id="@+id/textViewManufacture"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/manufacture" />-->


        <!-- Add serving -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/textViewPortionSizeB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:text="@string/portion_size" />

                <EditText
                    android:id="@+id/editTextPortionSizeGram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textViewPortionSizePCS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:text="@string/gram" />
            </TableRow>

            <!-- Hat of the table -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp">



                <TextView
                    android:id="@+id/textViewPortionSizeA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:text="@string/portion_size" />

                <EditText
                    android:id="@+id/editTextPortionSizePCS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textViewPcs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:text="@string/pcs" />
            </TableRow>


        </TableLayout>
        <!-- Submit button -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/add_to_diary" />
        <!-- //Submit button -->

        <!-- // Add serving -->





        <!-- Calories table -->
        <TextView
            android:id="@+id/textViewCaloriesTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calories_table"
            style="@style/Widget.TextViewSimple"
            android:layout_marginTop="16dp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <!-- Hat of the table -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textViewFoodBlank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:text="@string/blank" />

                <TextView
                    android:id="@+id/textViewFoodEnergy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="@string/energy" />

                <TextView
                    android:id="@+id/textViewFoodProteins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="@string/protein" />

                <TextView
                    android:id="@+id/textViewFoodCarbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="@string/carbs" />

                <TextView
                    android:id="@+id/textViewFoodFat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="@string/fat" />
            </TableRow>
            <!-- // Hat of the table -->

            <!-- Per N -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/textViewFoodBlankPerN"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/per_meal" />

                <TextView
                    android:id="@+id/textViewFoodEnergyPerN"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/energy" />

                <TextView
                    android:id="@+id/textViewFoodProteinsPerN"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/protein" />

                <TextView
                    android:id="@+id/textViewFoodCarbsPerN"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/carbs" />

                <TextView
                    android:id="@+id/textViewFoodFatPerN"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fat" />
            </TableRow>
            <!-- // Per N -->

            <!-- Per 100 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >

                <TextView
                    android:id="@+id/textViewFoodBlankPerHundred"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/per_portion" />

                <TextView
                    android:id="@+id/textViewFoodEnergyPerHundred"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/energy" />

                <TextView
                    android:id="@+id/textViewFoodProteinsPerHundred"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/protein" />

                <TextView
                    android:id="@+id/textViewFoodCarbsPerHundred"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/carbs" />

                <TextView
                    android:id="@+id/textViewFoodFatPerHundred"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fat" />
            </TableRow>
            <!-- // Per 100 -->

        </TableLayout>
        <!-- //  Calories table -->

        <!-- About -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textViewFoodAboutSimple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"

            style="@style/Widget.TextViewSimple" />
        <TextView
            android:id="@+id/textViewFoodAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textSize="18sp" />

        </TableRow>
        <!-- //About -->

        <!-- Description -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >
            <TextView
                android:id="@+id/textViewFoodDescriptionSimple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                style="@style/Widget.TextViewSimple" />
        <TextView
            android:id="@+id/textViewFoodDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="18sp" />
        </TableRow>
        <!-- // Description -->

    </LinearLayout>

</ScrollView>