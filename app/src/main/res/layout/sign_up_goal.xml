<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    style="@style/Widget.Spinner"-->
<!--                    android:padding="12dp"-->
<!--                    android:entries="@array/array_weekly_goal" />-->
<!--            </TableRow>-->
<!--            &lt;!&ndash; // I want to &ndash;&gt;-->

            <!-- Weekly goal -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/textViewWeeklyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="26dp"
                    style="@style/Widget.TextViewSimple"
                    android:text="@string/weekly_goal" />

                <Spinner
                    android:id="@+id/spinnerWeeklyGoalB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/Widget.Spinner"
                    android:padding="12dp"

                    android:entries="@array/array_weekly_goal_kg" />

<!--                <TextView-->
