<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textViewAddFoodToDiary"
                style="@style/Widget.TextViewItalic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:text="@string/add_to_diary"
                />
        <ImageView
            android:id="@+id/imageViewFoodAdd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_menu_action_add" />



        </TableRow>

        <!-- HeadLine -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <!-- Hat of the table -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
             >


                <!-- HeadLine -->
                <TextView
                    android:id="@+id/textViewFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/Widget.TextViewBig"
                    android:text="@string/name"
                    android:layout_weight="7"
                    />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/textViewManufacture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manufacture" />

        <!-- Calories table -->
        <TextView
            android:id="@+id/textViewCaloriesTable"
            style="@style/Widget.TextViewBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calories_table"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_meal_table">

            <!-- Hat of the table -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textViewFoodBlank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.TextViewForTable"
                    android:text="@string/blank" />

                <TextView
                    android:id="@+id/textViewFoodEnergy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.TextViewForTable"
                    android:text="@string/energy" />

                <TextView
                    android:id="@+id/textViewFoodProteins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.TextViewForTable"
                    android:text="@string/protein" />

                <TextView
                    android:id="@+id/textViewFoodCarbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.TextViewForTable"
                    android:text="@string/carbs" />

                <TextView
                    android:id="@+id/textViewFoodFat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.TextViewForTable"
                    android:text="@string/fat" />
            </TableRow>
            <!-- // Hat of the table -->

            <!-- Per N -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewFoodBlankPerPortion"
                    style="@style/Widget.TextViewForTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/per_portion"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/textViewFoodEnergyPerHundred"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/energy" />

                <TextView
                    android:id="@+id/textViewFoodProteinsPerHundred"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/protein" />

                <TextView
                    android:id="@+id/textViewFoodCarbsPerHundred"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/carbs" />

                <TextView
                    android:id="@+id/textViewFoodFatPerHundred"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fat" />
            </TableRow>
            <!-- // Per Portion -->

        </TableLayout>
        <!-- //  Calories table -->

        <!-- About -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textViewFoodAboutSimple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"

                style="@style/Widget.TextViewSimple" />
            <TextView
                android:id="@+id/textViewFoodAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textSize="18sp" />

        </TableRow>
        <!-- //About -->

        <!-- Description -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/textViewFoodDescriptionSimple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                style="@style/Widget.TextViewSimple" />
            <TextView
                android:id="@+id/textViewFoodDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textSize="18sp" />
        </TableRow>
        <!-- // Description -->


    </LinearLayout>

</ScrollView>