<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_marginBottom="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Goal -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/ic_components" />

            <TextView
                android:id="@+id/textViewGoal"
                style="@style/Widget.TextViewBig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal" />
        </TableRow>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_meal_table"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <!-- Energy Goal -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textViewEnergyGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/energy"
                    style="@style/Widget.TextViewSimple" />

                <EditText
                    android:id="@+id/editTextEnergyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/Widget.EditTextBlankBlue"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
                <CheckBox
                    android:id="@+id/checkboxEnergySave"
                    android:layout_width="wrap_content"
                    style="@style/Widget.CheckBoxBlue"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/save" />

            </TableRow>
            <!-- // Energy Goal -->
            <!-- Protein Goal -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textViewProteinGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/protein"
                    style="@style/Widget.TextViewSimple" />

                <EditText
                    android:id="@+id/editTextProteinGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/Widget.EditTextBlankBlue"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
                <CheckBox
                    android:id="@+id/checkboxProteinSave"
                    android:layout_width="wrap_content"
                    style="@style/Widget.CheckBoxBlue"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/save" />

            </TableRow>
            <!-- // Protein Goal -->
            <!-- Carbs Goal -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textViewCarbsGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carbs"
                    style="@style/Widget.TextViewSimple" />

                <EditText
                    android:id="@+id/editTextCarbsGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/Widget.EditTextBlankBlue"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
                <CheckBox
                    android:id="@+id/checkboxCarbsSave"
                    android:layout_width="wrap_content"
                    style="@style/Widget.CheckBoxBlue"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/save" />

            </TableRow>
            <!-- // Carbs Goal -->
            <!-- Fat Goal -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textViewFatGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fat"
                    style="@style/Widget.TextViewSimple" />

                <EditText
                    android:id="@+id/editTextFatGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/Widget.EditTextBlankBlue"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
                <CheckBox
                    android:id="@+id/checkboxFatSave"
                    android:layout_width="wrap_content"
                    style="@style/Widget.CheckBoxBlue"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/save" />

            </TableRow>
            <!-- // Fat Goal -->

        </TableLayout>

        <!-- // Goal -->

        <!-- Status -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/ic_status_person" />

            <TextView
                android:id="@+id/textViewStatus"
                style="@style/Widget.TextViewBig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </TableRow>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp">

            <!-- Weight -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewGoalWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    style="@style/Widget.TextViewSimple" />

                <EditText
                    android:id="@+id/editTextUserWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/Widget.EditTextBlankBlue"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textViewGoalKg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.TextViewSimple"
                    android:text="@string/kg"
                    />
            </TableRow>
            <!-- // Weight -->
            <!-- Target Weight -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.TextViewSimple"
                    android:text="@string/target_weight"
                    />

                <EditText
                    android:id="@+id/editTextUserTargetWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"

                    style="@style/Widget.EditTextBlankBlue" />

                <TextView
                    android:id="@+id/textViewGoalKg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.TextViewSimple"
                    android:text="@string/kg"
                    />
            </TableRow>
            <!-- // Target weight -->

            <!-- Weekly goal -->

            <!-- Table layout -->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewWantTo"
                        android:layout_width="match_parent"
                        style="@style/Widget.TextViewSimple"
                        android:text="@string/i_want_to" />

                    <TextView
                        android:id="@+id/textViewUserWantTo"
                        android:layout_width="match_parent"
                        style="@style/Widget.TextViewSimple"
                        android:text="@string/i_want_to" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewWeeklyGoal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.TextViewSimple"
                        android:text="@string/weekly_goal" />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Spinner
                            android:id="@+id/spinnerWeeklyGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dialog"
                            android:entries="@array/array_weekly_goal_kg" />
                    </TableRow>

                </TableRow>
                <!-- // Weekly goal -->

                <!-- Activity level -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.TextViewSimple"
                        android:text="@string/activity_level" />


                    <Spinner
                        android:id="@+id/spinnerActivityLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/array_activity_level" />
                </TableRow>
            </TableLayout>
            <!-- //Activity level -->

            <!-- Submit button -->
            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_bg"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/login_form_details"
                android:text="@string/submit" />

            <!-- //Submit button -->

        </TableLayout>

        <!-- Digits -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/ic_parts" />

            <TextView
                android:id="@+id/textViewNumbers"
                style="@style/Widget.TextViewBig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/digits" />
        </TableRow>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_meal_table">
            <!-- Loose weight -->
            <TextView
                android:id="@+id/textViewLooseWeight"
                android:layout_marginTop="12sp"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                style="@style/Widget.TextViewItalic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to_loose_weight" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp">

                <!-- Head -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewBlank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.TextViewForTable"
                        android:text="@string/blank"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewEnergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/energy"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewProteins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/protein"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewCarbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/carbs"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewFat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/fat"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />
                </TableRow>
                <!-- // Head -->

                <!-- Without activity -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewWithoutActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/without_activity"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewEnergyLooseWithout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/energy"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewProteinsLooseWithout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/protein"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewCarbsLooseWithout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/carbs"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewFatLooseWithout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/fat"
                        android:textSize="18sp" android:layout_weight="1" />
                </TableRow>
                <!-- // Without Activity -->

                <!-- With activity -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewWithActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/with_activity"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewEnergyLooseWith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/energy"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewProteinsLooseWith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/protein"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewCarbsLooseWith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/carbs"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewFatLooseWith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/fat"
                        android:textSize="18sp" android:layout_weight="1" />
                </TableRow>
                <!-- // Without Activity -->

            </TableLayout>
            <!-- // Loose weight -->

            <!-- Keep weight -->
            <TextView
                android:id="@+id/textViewKeepWeight"
                android:layout_marginTop="12sp"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                style="@style/Widget.TextViewItalic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to_keep_weight" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp">

                <!-- Head -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewKeepBlank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewEnergyKeep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/energy"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewProteinsKeep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/protein"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewCarbsKeep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carbs"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewFatKeep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fat"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />
                </TableRow>
                <!-- // Head -->

                <!-- Without activity -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewKeepWithoutActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/without_activity"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewEnergyKeepWithout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/energy"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewProteinsKeepWithout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/protein"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewCarbsKeepWithout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/carbs"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewFatKeepWithout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/fat"
                        android:textSize="18sp" android:layout_weight="1" />
                </TableRow>
                <!-- // Without Activity -->

                <!-- With activity -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewKeepWithActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/with_activity"
                        style="@style/Widget.TextViewForTable"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewEnergyKeepWith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/energy"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewProteinsKeepWith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/protein"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewCarbsKeepWith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/carbs"
                        android:textSize="18sp" android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textViewFatKeepWith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8sp"
                        android:text="@string/fat"
                        android:textSize="18sp" android:layout_weight="1" />
                </TableRow>
                <!-- // Without Activity -->
            </TableLayout>
            <!-- // Keep weight -->
        </TableLayout>
        <!-- // Digits -->


    </LinearLayout>

</ScrollView>