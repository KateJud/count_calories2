<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#D4ADCD87</item>
        <item name="colorPrimaryDark">#D4ADCD87</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!-- Spinner -->
    <style name="Widget.Spinner" parent="android:Widget">
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:popupBackground">@drawable/et_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/login_form_details</item>
    </style>
    <!-- // Spinner -->

    <style name="Widget.SpinnerBlank" parent="android:Widget">
        <item name="android:popupBackground">@drawable/et_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/login_form_details</item>
    </style>
    <!-- Text View -->
    <style name="Widget.TextViewSimple" parent="android:Widget">
        <item name="android:textColor">@color/login_form_details</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Widget.TextViewBig" parent="android:Widget">
        <item name="android:textColor">@color/login_form_details</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
    </style>
    <!-- // Text View -->

    <!-- EditText -->
    <style name="Widget.EditTextBlank" parent="android:Widget">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/login_form_details</item>
     <item name="background">@drawable/et_bg_blank</item>
        <item name="android:ems">4</item>
    </style>
    <!-- // EditText -->

    <!-- Button -->
    <style name="Widget.MyButton" parent="android:Widget">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/login_form_details</item>
        <item name="background">@drawable/btn_bg</item>
    </style>
    <!-- // Button  -->
    <!-- Button -->
    <style name="Widget.MyButtonAdd" parent="android:Widget">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/login_form_details</item>
        <item name="background">@color/gray</item>
        <item name="android:foregroundGravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>
    <!-- // Button  -->
</resources>