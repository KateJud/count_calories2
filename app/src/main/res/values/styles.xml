<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ADCD87</item>
        <item name="colorPrimaryDark">#ADCD87</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!-- Spinner -->
    <style name="Widget.Spinner" parent="android:Widget">
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:popupBackground">@drawable/et_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/login_form_details</item>
    </style>
    <!-- // Spinner -->

    <style name="Widget.SpinnerBlank" parent="android:Widget">
        <item name="android:popupBackground">@drawable/et_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/login_form_details</item>
    </style>
    <!-- Text View -->
    <!-- Text Simple -->
    <style name="Widget.TextViewSimple" parent="android:Widget">
        <item name="android:textColor">@color/login_form_details</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- // Text Simple -->
    <!-- Text Big -->
    <style name="Widget.TextViewBig" parent="android:Widget">
        <item name="android:textColor">@color/login_form_details</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
    </style>
    <!-- // Text Big -->
    <!-- Text Big Components-->
    <style name="Widget.TextViewBigComponents" parent="android:Widget">
        <item name="android:textColor">@color/login_form_details</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- // Text Big Components-->
    <!-- Text Small Components-->
    <style name="Widget.TextViewSmallComponents" parent="android:Widget">
        <item name="android:textColor">@color/login_form_details</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!-- // Text Small Components-->

    <!-- Text Hi-->
    <style name="Widget.TextViewHi" parent="android:Widget">
        <item name="android:textColor">@color/login_form_details</item>
        <item name="android:textStyle"> italic|bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- // Text Small Components-->
    <!-- // Text View ***************************** -->
    <!-- Image-->
    <style name="Widget.ImageView" parent="android:Widget">
        <item name="android:width">30dp</item>
        <item name="android:height">30dp</item>
    </style>
    <!-- //Image-->

    <!-- EditText -->
    <style name="Widget.EditTextBlankBlue" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/login_form_details</item>
        <item name="backgroundTint">@color/light_blue</item>
        <item name="android:ems">5</item>
    </style>
    <!-- // EditText -->

    <!-- Button *********************************************-->
    <!-- Button -->
    <style name="Widget.MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/login_form_details</item>
        <item name="background">@drawable/btn_bg</item>
    </style>
    <!-- // Button  -->
    <!-- Button -->
    <style name="Widget.MyButtonAdd" parent="android:Widget">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/login_form_details</item>
        <item name="background">@color/gray</item>
        <item name="android:foregroundGravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>
    <!-- // Button ********************************************* -->


    <!-- RadioButton ++++++++++++++++++++++++++++++++++++++++++++++ -->
    <!-- RadioButton Blue -->
    <style name="Widget.RadioButtonBlue" parent="android:Widget.CompoundButton.RadioButton">
        <item name="buttonTint">@color/light_blue</item>
    </style>
    <!-- // RadioButton Blue -->
    <!-- RadioButton ********************************************* -->

    <!-- CheckBox ++++++++++++++++++++++++++++++++++++++++++++++ -->
    <!-- CheckBox Blue -->
    <style name="Widget.CheckBoxBlue" parent="android:Widget.CompoundButton.CheckBox">
        <item name="buttonTint">@color/light_blue</item>
    </style>
    <!-- // CheckBox Blue -->
    <!-- CheckBox ********************************************* -->

    <!-- DataPicker ++++++++++++++++++++++++++++++++++++++++++++++ -->
    <!-- DataPicker Blue -->
    <style name="Widget.DataPickerBlue" parent="android:Widget.CompoundButton.RadioButton">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/my_green</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/light_blue</item>
    </style>
    <!-- // DataPicker Blue -->
    <!-- DataPicker ********************************************* -->


    <!-- Table ++++++++++++++++++++++++++++++++++++++++++++++++ -->
    <!-- Meal Table -->
    <style name="Widget.TableMeal" parent="android:Widget">
        <item name="background">@drawable/bg_meal_table</item>
    </style>
    <!-- // Meal Table -->

    <!-- Sub Meal Table -->
    <style name="Widget.TableMealSub" parent="android:Widget">
        <item name="background">@drawable/bg_meal_table</item>
    </style>
    <!-- // Sub Meal Table -->
    <!-- // Table ********************************************* -->



</resources>